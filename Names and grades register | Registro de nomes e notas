EN:
//This program registers three names, respective genders and grades, displaying them organized in the execution
#include <stdio.h>
void main(){
    char name[20], name_2[20], name_3[20];
    char gender, gender_2, gender_3;
    float grade, grade_2, grade_3;
    printf("Submitting the first person\n");
    printf("-----------------------------\n");
    printf("NAME:");
    gets(name);
    printf("GENDER [M/F]:");
    gender = getchar();
    printf("GRADE:");
    scanf("%f", &grade);
    printf("Submitting the second person\n");
    printf("----------------------------\n");
    printf("NAME:");
    fflush(stdin);
    gets(name_2);
    printf("GENDER [M/F]:");
    gender_2 = getchar();
    printf("GRADE:");
    scanf("%f", &grade_2);
    printf("Submitting the third person\n");
    printf("-------------------------------\n");
    printf("NAME:");
    fflush(stdin);
    gets(name_3);
    printf("GENDER [M/F]:");
    gender_3 = getchar();
    printf("GRADE:");
    scanf("%f", &grade_3);
    printf("Full list\n");
    printf("-----------------\n");
    printf("NAME\t\t\tGENDER\tGRADE\n");
    printf("%-25s %c %8.1f\n", name, gender, grade);
    printf("%-25s %c %8.1f\n", name_2, gender_2, grade_2);
    printf("%-25s %c %8.1f", name_3, gender_3, grade_3);
}
